{
    "project": "YaCUP-Music",
    "name": "BaseLine",
    "n_gpu": 1,

    "arch": {
        "type": "BERT",
        "args": {}
    },
    "dataset": {
        "embed_path": "dataset/embeddings/",
        "labels_path": "dataset/train.csv",
        "rt_load": true,
        "batch_size": 1,
        "shuffle": true,
        "validation_split": 0.1,
        "workers": 8,
        "seed": 42,
        "test_size": 0.2
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 3e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "WeightedBCE",
        "args": {"class_count_path": "dataset/tags_count.csv"}
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val/AP",
        "early_stop": 10,

        "tensorboard": true
    }
}
